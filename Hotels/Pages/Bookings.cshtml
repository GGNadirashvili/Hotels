@page
@model Hotels.Pages.BookingsModel
@{
    ViewData["Title"] = "Bookings page";
}

<section>
    <div class="card-container">
        @foreach (var booking in Model.Bookings)
        {
            <div class="card">
                <a class="text-dark" asp-page="/Rooms" asp-route-hotelId="@booking.HotelId">
                    <div class="card-header  text-black">
                    </div>
                    <div class="card-body">
                        <p><strong>Hotel:</strong> @booking.Hotel!.Name</p>
                        <p><strong>City:</strong> @booking.Hotel.City.Name</p>
                        <p><strong>Room N:</strong> @booking.Room!.RoomNumber</p>
                        <p><strong>Customer:</strong> @booking.Customer!.Name @booking.Customer.LastName</p>
                        <p><strong>Total Price:</strong> @booking.TotalPrice$</p>
                        <p><strong>CheckIn Date:</strong> @booking.CheckInDate</p>
                        <p><strong>CheckOut Date:</strong> @booking.CheckOutDate </p>

                        <img src="@booking.Hotel.PhotoUrl" alt="Room Photo" />
                    </div>
                </a>
            </div>
        }
    </div>
</section>
