@page
@model Hotels.Pages.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-lg-4">
            <h1 class="mb-3"> Register</h1>
            <form method="post">

                <div class="mb-3">
                    <label class="form-label" asp-for="Register!.Number">Phone Number</label>
                    <input type="text" asp-for="Register!.Number" class="form-control" />
                    <span asp-validation-for="Register!.Number" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Register!.Name">Name</label>
                    <input type="text" asp-for="Register!.Name" class="form-control" />
                    <span asp-validation-for="Register!.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Register!.LastName">LastName</label>
                    <input type="text" asp-for="Register!.LastName" class="form-control" />
                    <span asp-validation-for="Register!.LastName" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Register!.Email">Email Address</label>
                    <input class="form-control" type="text" asp-for="Register!.Email" />
                    <span asp-validation-for="Register!.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Register!.Password">Password</label>
                    <input class="form-control" type="password" asp-for="Register!.Password" />
                    <span asp-validation-for="Register!.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Register!.ConfirmPassword">Confirm password</label>
                    <input class="form-control" type="password" asp-for="Register!.ConfirmPassword" />
                    <span asp-validation-for="Register!.ConfirmPassword" class="text-danger"></span>
                </div>
                <div>
                    <button class="btn btn-primary" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>